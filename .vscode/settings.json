{
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "javascript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "git.confirmSync": false,
  "explorer.confirmDelete": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": [
    "typescript",
    "typescriptreact"
  ],
  "editor.formatOnSave": true,
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "[typescript][typescriptreact][scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.configPath": ".prettierrc",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.tabSize": 2,
  "lit-plugin.rules.no-boolean-in-attribute-binding": "off",
  "lit-plugin.rules.no-complex-attribute-binding": "off",
  "lit-plugin.rules.no-expressionless-property-binding": "off",
  "lit-plugin.rules.no-incompatible-property-type": "off",
  "lit-plugin.rules.no-incompatible-type-binding": "off",
  "lit-plugin.rules.no-invalid-attribute-name": "off",
  "lit-plugin.rules.no-invalid-boolean-binding": "off",
  "lit-plugin.rules.no-invalid-css": "off",
  "lit-plugin.rules.no-invalid-directive-binding": "off",
  "lit-plugin.rules.no-invalid-tag-name": "off",
  "lit-plugin.rules.no-missing-element-type-definition": "off",
  "lit-plugin.rules.no-missing-import": "off",
  "lit-plugin.rules.no-noncallable-event-binding": "off",
  "lit-plugin.rules.no-nullable-attribute-binding": "off",
  "lit-plugin.rules.no-unclosed-tag": "off",
  "lit-plugin.rules.no-unknown-attribute": "off",
  "lit-plugin.rules.no-unknown-event": "off",
  "lit-plugin.rules.no-unknown-property": "off",
  "lit-plugin.rules.no-unknown-slot": "off",
  "lit-plugin.rules.no-unknown-tag-name": "off",
  // "tailwindCSS.experimental.classRegex": ["class:\\s*?[\"'`]([^\"'`]*).*?,"],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  }
}